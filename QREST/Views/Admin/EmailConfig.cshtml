@model QREST.Models.vmAdminEmailConfig
@{
    ViewBag.Title = "Email Template Configuration";
}

<section class="hbox">
    <aside class="aside-md bg-white b-r" id="subNav">
        <div class="wrapper b-b header bg-dark">Email Templates</div>
        <ul class="nav">
            @foreach (var item in Model.T_QREST_EMAIL_TEMPLATE)
            {
                <li class="b-b b-light">
                    <a href="@Url.Action("EmailConfig", "Admin", new { id = item.EMAIL_TEMPLATE_ID })" class="@(item.EMAIL_TEMPLATE_ID==@Model.editID ? "master-active" : "")"><i class="fa fa-chevron-right pull-right m-t-xs text-xs icon-muted"></i>@item.EMAIL_TEMPLATE_NAME</a>
                </li>
            }
        </ul>
    </aside>
    <aside>
        <div class="wrapper b-b header bg-dark">Details</div>
        <section class="panel m-b-none">
            <div class="panel-body">
                @using (Html.BeginForm("EmailConfig", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.editID)
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                Email Subject
                                @Html.TextBoxFor(model => model.editSUBJ, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.editSUBJ)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                Email Body
                                @Html.EditorFor(model => model.editMSG, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.editMSG)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button id="btnSave" type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                }
            </div>
        </section>
    </aside>
</section>
