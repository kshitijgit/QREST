@model QREST.Models.vmSiteMonitorImport
@{
    ViewBag.Title = "Monitors to Import from AQS";
}


<section class="panel panel-qrest">
    <header class="panel-heading font-bold">AQS Monitors for @Model.siteName</header>
    <div class="panel-body">
        @if (Model.ImportMonitors != null && Model.ImportMonitors.Count > 0)
        {
            <div class="alert alert-info">
                The following monitors have been found at AQS for this site.
            </div>
        }
        <div class="table-responsive">
            <table id="gridData" class="table table-striped table-bordered" data-ride="datatables" style="width:100%">
                <thead>
                    <tr>
                        <th>AQS Site ID</th>
                        <th>Site Name</th>
                        <th>Site Name</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                @foreach (var item in Model.ImportMonitors)
                {
                    @*<tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ORG_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SITE_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SITE_NAME)
                        </td>
                        <td>
                            @if (item.SITE_COMMENTS == "I")
                            {
                                <span class="label label-success"> Ready to Import</span>
                            }
                            else
                            {
                                <span class="label label-danger"> Already in QREST - will not be imported</span>
                            }
                        </td>
                    </tr>*@
                }
            </table>
        </div>
        @if (Model.ImportMonitors != null && Model.ImportMonitors.Count > 0)
        {
            using (Html.BeginForm("SiteImport", "Site", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.siteIDX)
                <button type="submit" class="btn btn-lg btn-primary btn-rounded"><i class="fa fa-plus"></i> Click to Confirm Import</button>
                <a href="@(Url.Action("SiteEdit", "Site", new { id = Model.siteIDX }))" class="btn btn-sm btn-default pull-right"><i class="fa fa-chevron-left"></i> Return to Site Edit</a>
            }
        }
    </div>
</section>

