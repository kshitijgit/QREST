@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html lang="en" class="app">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="qrest, aqs, air quality, tribes, tribal environmental" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QREST - @ViewBag.Title</title>
    <link rel="icon" href="@Url.Content("~/Content/favicon.ico")" />
    <link rel="icon" type="image/png" sizes="32x32" href="@Url.Content("~/Content/favicon-32x32.png")">
    <link rel="icon" type="image/png" sizes="16x16" href="@Url.Content("~/Content/favicon-16x16.png")">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="vbox">
        <!-- HEADER -->
        <header class="bg-dark dk header navbar navbar-fixed-top-xs">
            <div class="navbar-header aside-md">
                <a class="btn btn-link visible-xs" data-toggle="class:nav-off-screen,open" data-target="#nav,html">
                    <i class="fa fa-bars"></i>
                </a>
                <a href="@Url.Action("Index", "Dashboard")" class="navbar-brand" data-toggle="tooltip" data-original-title="Quality Review and Exchange System for Tribes" data-placement="bottom" data-container="body"><img src="~/Content/Images/itep_logo_120.png" class="m-r-sm">QREST</a>
                <a class="btn btn-link visible-xs" data-toggle="dropdown" data-target=".nav-user">
                    <i class="fa fa-cog"></i>
                </a>
            </div>

            <ul class="nav navbar-nav navbar-right m-n hidden-xs nav-user">
                @if (Request.IsAuthenticated)
                {
                    <li class="hidden-xs">
                        <a href="#" class="dropdown-toggle dk" data-toggle="dropdown">
                            <i class="fa fa-bell"></i>
                            <span class="badge badge-sm up bg-danger m-l-n-sm count" style="display: inline-block;">3</span>
                        </a>
                        <section class="dropdown-menu aside-xl">
                            <section class="panel bg-white">
                                <div class="panel-heading b-light bg-light">
                                    <strong>You have 3 notifications</strong>
                                </div>
                                <div class="list-group list-group-alt animated fadeInRight">
                                    <a href="#" class="media list-group-item" style="display: block;"><span class="pull-left thumb-sm text-center"><i class="fa fa-envelope-o fa-2x text-success"></i></span><span class="media-body block m-b-none">Sophi sent you a email<br><small class="text-muted">1 minutes ago</small></span></a>
                                    <a href="#" class="media list-group-item">
                                        <span class="media-body block m-b-none">
                                            Use awesome animate.css<br>
                                            <small class="text-muted">10 minutes ago</small>
                                        </span>
                                    </a>
                                    <a href="#" class="media list-group-item">
                                        <span class="media-body block m-b-none">
                                            1.0 initial released<br>
                                            <small class="text-muted">1 hour ago</small>
                                        </span>
                                    </a>
                                </div>
                                <div class="panel-footer text-sm">
                                    <a href="#" class="pull-right"><i class="fa fa-cog"></i></a>
                                    <a href="#notes" data-toggle="class:show animated fadeInRight">See all the notifications</a>
                                </div>
                            </section>
                        </section>
                    </li>
                }
                <li class="dropdown">
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "" }))
                        {
                            @Html.AntiForgeryToken()

                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                @User.Identity.GetUserName() <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu animated fadeInRight">
                                <span class="arrow top"></span>
                                <li>
                                    <a href="@Url.Action("MyProfile", "Account")">Profile</a>
                                </li>
                                <li>
                                    <a href="#">
                                        <span class="badge bg-danger pull-right">3</span>
                                        Notifications
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Help", "Home")" target="_blank">Help</a>
                                </li>
                                <li class="divider"></li>
                                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                            </ul>
                        }
                    }
                    else
                    {
                        <ul class="nav navbar-nav navbar-right" style="padding-right:20px;">
                            <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                            <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                        </ul>
                    }

                </li>
            </ul>
        </header>
        <!-- END HEADER -->
        <section>
            <section class="hbox stretch">
                <!-- start: LEFT MENU -->
                @if (Request.IsAuthenticated && ViewBag.HideLeft != true)
                {
                    @Html.Partial("_LeftMenu")
                }
                <!-- end: LEFT MENU -->
                <!-- MAIN CONTENT -->
                <section id="content">
                    <section class="vbox">
                        <section class="scrollable padder">
                            <!--breadcrumbs -->
                            @if (ViewBag.HideCrumbs != true)
                            {
                                <ul class="breadcrumb no-border no-radius b-b b-light pull-in">
                                    <li><a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-home"></i> Home</a></li>
                                    <li class="active">@ViewBag.Title</li>
                                </ul>
                            }
                            <!-- page title-->
                            @if (ViewBag.HideTitle != true)
                            {
                            <div class="m-b-md">
                                @if (ViewBag.PageConfig == true)
                                {
                                    <a href="#" data-toggle="tooltip" data-placement="left" data-original-title="Page Config" class="pull-right"><i class="fa fa-cog fa-2x text-dark "></i></a>
                                }
                                <h3 class="m-b-none m-t-sm">@ViewBag.Title</h3>
                                <span style="font-size:9pt; font-style:italic">@Html.Raw(ViewBag.SubTitle)</span>
                            </div>
                            }
                            @RenderBody()

                        </section>
                    </section>
                </section>
            </section>
        </section>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/app")

    @Html.Partial("_Alerts")

    @RenderSection("scripts", required: false)
</body>
</html>
